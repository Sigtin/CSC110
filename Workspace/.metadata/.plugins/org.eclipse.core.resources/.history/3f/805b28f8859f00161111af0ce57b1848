package game;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Random;

import enums.RPS;
import lib.ConsoleIO;

public class App {
	public static BufferedReader readRacer = new BufferedReader(new InputStreamReader(System.in));
	public static int prompt() {
		boolean isLooping = true;
		do {
			System.out.print("Please enter 1 for Rock, 2 for Paper, or 3 for Scissors: ");
			String userInput = "";
			int input = 0;
			boolean isValid = true;
			do {
				try {
					userInput = readRacer.readLine();
					input = Integer.parseInt(userInput);
					isValid = true;
				} catch (IOException e) {
					System.exit(0);
				}
			} while (!isValid);
			
			return input;
			
		} while (isLooping);
	}
	
	public static void playerGuess(int input) {
		switch (input) {
		case 1: System.out.println("Player: Rock");
				break;
		case 2: System.out.println("Player: Paper");
				break;
		case 3: System.out.println("Player: Scissors");
		}
		
	}

	public static void CPUGuess() {
		boolean isValid = true;
		do {
			Random rand = new Random();
			int i = rand.nextInt(3);
			RPS guess = RPS.values()[i];
			System.out.println("CPU: " + guess);
			if (!ConsoleIO.promptForInput("", true).equals("")) {
				isValid = false;
			}
		} while (isValid);

	}
	
	public static void run() {
		int i = prompt();
		playerGuess(i);
	}

}

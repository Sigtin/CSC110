package deckDemoApp;

import java.util.Random;

import deckDemoEnums.DeckDemoCardSuits;
import deckDemoEnums.DeckDemoCardValues;
import lib.ConsoleIO;

public class DeckDemoDeck {

	private DeckDemoCard[] cards = new DeckDemoCard[52];

	public DeckDemoDeck() {
		int counter = 0;

		for (int i = 0; i < 4; i++) {
			for (int j = 0; j < 13; j++) {
				DeckDemoCard card = new DeckDemoCard(DeckDemoCardSuits.values()[i], DeckDemoCardValues.values()[j]);
				cards[counter] = card;
				counter++;
			}
		}
	}

	@Override
	public String toString() {
		// Return a String in the format: Suit " of " Value
		String retVal = "";
		for (DeckDemoCard i : cards) {
			retVal += i + "\n";
		}

		return retVal;
	}

	public void shuffle() {
		for (int i = 0; i < cards.length; i++) {
			Random rand = new Random();
			int randNum = rand.nextInt(52);
			DeckDemoCard temp = cards[randNum];
			cards[randNum] = cards[i];
			cards[i] = temp;
		}
	}

	private int topOfDeck = 0;

	public DeckDemoCard[] dealCards(int cardsDealt) {
		for (topOfDeck = 0; topOfDeck < 5; topOfDeck++) {

		}

		String[] options = new String[] { "Deal next five cards: ", "Reshuffle" };

		ConsoleIO.promptForMenuSelection(options, true);

	}

}
